<h1>Просмотр сообщений</h1>

<table>
  <thead>
    <tr>
      <th>Профиль</th>
      <th>Пользователь</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @microposts.each do |micropost| %>
      <tr>
        <td><%= micropost.content %></td>
        <td><%= micropost.user_id %></td>
        <td><%= link_to 'Просмотреть', micropost %></td>
        <td><%= link_to 'Редактировать', edit_micropost_path(micropost) %></td>
        <td><%= link_to 'Удалить', micropost, method: :delete, data: { confirm: 'Вы уверены, что хотите удалить сообщение?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новое сообщение', new_micropost_path %>
