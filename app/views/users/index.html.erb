<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Name&nbsp;</th>
      <th>&nbsp;Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %>&nbsp;</td>
        <td>&nbsp;<%= user.email %></td>
        <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
					<%= link_to 'Show', user %>&nbsp;</td>
        <td>&nbsp;<%= link_to 'Edit', edit_user_path(user) %>&nbsp;</td>
        <td>&nbsp;<%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
